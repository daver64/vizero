<?xml version="1.0" encoding="UTF-8"?>
<!-- Sample XML configuration file -->
<configuration xmlns="http://example.com/schema" version="2.0">
    <appSettings>
        <add key="DatabaseConnection" value="Server=localhost;Database=MyApp;Trusted_Connection=true;" />
        <add key="MaxRetries" value="3" />
        <add key="EnableLogging" value="true" />
    </appSettings>
    
    <system.web>
        <compilation debug="false" targetFramework="4.8" />
        <httpRuntime maxRequestLength="51200" executionTimeout="300" />
    </system.web>
    
    <connectionStrings>
        <add name="DefaultConnection" 
             connectionString="Data Source=localhost;Initial Catalog=TestDB;Integrated Security=True" 
             providerName="System.Data.SqlClient" />
    </connectionStrings>
    
    <!-- Custom section -->
    <customSection>
        <![CDATA[
            This is a CDATA section with <special> characters & symbols.
        ]]>
    </customSection>
</configuration>